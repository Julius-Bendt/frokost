<h1 id="salary" class="text-2xl text-center">Der er løn om xx dage </h1>

<script>
    import { getDaysToSalary } from "../scripts/Weekdays.js";


const salary = document.getElementById("salary");
salary.innerHTML = format();

function format()
{
    const lastWeekday = getDaysToSalary();
    const date = new Date().getDate();
    const diff = lastWeekday - date;
    
    if(diff < 0)
    {
        return "";
    }

    if(diff == 0)
    {
        return "Du får løn i <span class='font-bold'>dag!</span>";
    }

    if(diff == 1)
    {
        return "Du får løn i <span class='font-bold'>morgen</span>";
    }

    if(diff == 2)
    {
        return "Du får løn i <span class='font-bold'>overmorgen</span>";
    }

    return `Du får løn om <span class="font-bold">${diff}</span> dage`;
}

</script>